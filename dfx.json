{
  "canisters": {
    "counter": {
      "main": "canisters/counter/main.mo",
      "type": "motoko"
    },
    "ii_integration": {
      "main": "canisters/ii_integration/main.mo",
      "type": "motoko"
    },
    "user": {
      "type": "custom",
      "build": "python -m kybra user canisters/user.py canisters/user.did",
      "post_install": ".kybra/user/post_install.sh",
      "candid": "canisters/user.did",
      "wasm": ".kybra/user/user.wasm",
      "gzip": true,
      "declarations": {
        "output": "src/declarations/user",
        "node_compatibility": true
      }
    },
    "verifier": {
      "type": "custom",
      "build": "python -m kybra verifier canisters/verifier.py canisters/verifier.did",
      "post_install": ".kybra/verifier/post_install.sh",
      "candid": "canisters/verifier.did",
      "wasm": ".kybra/verifier/verifier.wasm",
      "gzip": true,
      "declarations": {
        "output": "src/declarations/verifier",
        "node_compatibility": true
      }
    },
    "internet_identity" : {
      "type": "pull",
      "id": "rdmx6-jaaaa-aaaaa-aaadq-cai"
    },
    "assets": {
      "dependencies": [
        "counter",
        "ii_integration"
      ],
      "frontend": {
        "entrypoint": "dist/index.html"
      },
      "source": [
        "dist/",
        "paths"
      ],
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": [
        "https://mainnet.dfinity.network"
      ],
      "type": "persistent"
    }
  },
  "output_env_file": ".env",
  "version": 1
}
